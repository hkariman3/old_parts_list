<%= render "public/public_header" %>
<div class = "container">
    
    <%= form_with model: @post, url: post_path, method: :patch do |f| %>
    <div class = "row">
        <div class = "col"><p>出品名</p></div>
        <div class = "col"><%= f.text_field :name %></div>
    </div>
    
    <div class = "row">
        <div class = "col">
            <p>ジャンル</p>
        </div>
        <div class = "col">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
    </div>
    
    <div class = "row">
        <div class = "col"><p>商品説明</p></div>
        <div class = "col"><%= f.text_field :introduction %></div>
    </div>
    
    <div class = "row">
        <div class = "col"><p>商品価格</p></div>
        <div class = "col"><%= f.text_field :price %></div>
    </div>
    
    <div class = "row">
        <div class = "col"><p>商品写真</p></div>
        <div class = "col"><%= f.file_field :images, name: 'post[images][]', data: {index: 0}, accept: "image/*" %></div>
        <div class = "col"><%= f.file_field :images, name: 'post[images][]', data: {index: 1}, accept: "image/*" %></div>
        <div class = "col"><%= f.file_field :images, name: 'post[images][]', data: {index: 2}, accept: "image/*" %></div>
        <div class = "col"><%= f.file_field :images, name: 'post[images][]', data: {index: 3}, accept: "image/*" %></div>
        <div class = "col"><%= f.file_field :images, name: 'post[images][]', data: {index: 4}, accept: "image/*" %></div>
    </div>
    
    <div class = "row">
        <div class = "col"><%= f.submit "変更する" %></div>
    </div>
    <% end %>
</div>