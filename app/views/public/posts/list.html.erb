<%= render "public/public_header" %>
<div class = "container">
  <div class = "row">
    <div class = "col">
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
        <%= post.name %>
        <%= post.introduction %>
        <%= post.price %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= paginate @posts %>
</div>