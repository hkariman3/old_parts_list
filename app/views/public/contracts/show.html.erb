<%= render "public/public_header" %>

<div class = "container">
  <div class = "row text-center pt-2">
    <div class = "col">
      <h2>購入履歴詳細</h2>
    </div>
  </div>
  
  <div class = "row">
    <div class = "col">
      <table class = "table">
        <tbody>
          <tr>
            <th>出品者名</th>
            <th><%= @customer.first_name %><%= @customer.last_name %></th>
          </tr>
          <tr>
            <th>購入者</th>
            <th><%= @buyer.first_name %><%= @buyer.last_name %></th>
          </tr>
          <tr>
            <th>宛先</th>
            <th><%= @address.address %></th>
            <th><%= @address.postal_code %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>