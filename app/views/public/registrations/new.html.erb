<%= render "public/public_header" %>
<div class="container">
  <h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "姓" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "セイ" %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :last_name, "名" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "メイ" %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>


